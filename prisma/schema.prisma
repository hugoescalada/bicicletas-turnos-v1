// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Booking {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  serviceId   String
  date        String   // Storing as string YYYY-MM-DD for simplicity
  time        String
  clientName  String
  clientEmail String
  clientPhone String
  bikeModel   String
}
